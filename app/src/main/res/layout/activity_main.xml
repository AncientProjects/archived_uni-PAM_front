<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/bookListButton"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="booklist" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:id="@+id/authorListButton"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="authors"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/bookListButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bookListButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/infoButton"/>
    <Button
            android:id="@+id/infoButton"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="info" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</android.support.constraint.ConstraintLayout>